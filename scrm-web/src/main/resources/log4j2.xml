<Configuration status="INFO" debug="true">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p [%c] %m%n"/>
        </Console>
        <RollingFile name="ServerDailyRollingFile" filename="logs/scrm/scrm.log"
                     filePattern="logs/scrm/$${date:yyyy-MM}/scrm-%d{yyyy-MM-dd-HH}-%i.log">
            <PatternLayout>
                <pattern>%d - [%p]%m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="24" modulate="true"/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ServerDailyRollingFile"/>
        </Root>
    </Loggers>
</Configuration>